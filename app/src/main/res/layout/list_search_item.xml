<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.PlaylistMaker"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_menu_height"
    android:paddingHorizontal="@dimen/search_menu_h_padding"
    android:paddingVertical="@dimen/half_main_padding">

    <ImageView
        android:id="@+id/trackArtwork"
        android:layout_height="45dp"
        android:layout_width="45dp"
        android:layout_marginStart="1dp"
        tools:src="@drawable/artwork_album"
        android:contentDescription="@string/search"/>

    <TextView
        android:id="@+id/trackName"
        style="@style/SearchItems"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="[Yesterday (Remastered 2009)]"/>

    <ImageView
        style="@style/SearchItemsSmall"
        android:layout_height="24dp"
        android:layout_width="24dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:src="@drawable/right_arrow_glif"
        android:contentDescription="@string/search"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/artistName"
            style="@style/SearchItemsSmall"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="[The Beatles]"
            tools:ignore="InefficientWeight" />

        <ImageView
            android:layout_height="13dp"
            android:layout_width="13dp"
            android:padding="5dp"
            android:src="@drawable/round_glif"
            android:contentDescription="@string/search"/>

        <TextView
            android:id="@+id/trackTime"
            style="@style/SearchItemsSmall"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="[2:55]"/>

    </LinearLayout>

</FrameLayout>