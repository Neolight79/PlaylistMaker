<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsButtons">
        <item name="android:gravity">start|center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="thumbTint">@color/thumb</item>
        <item name="trackTint">@color/track</item>
        <item name="android:paddingHorizontal">@dimen/menu_h_padding</item>
        <item name="android:paddingVertical">@dimen/menu_v_padding</item>
    </style>
    <style name="SideButtons">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/button_gray_day</item>
    </style>
    <style name="PlayButton">
        <item name="tint">@color/dark</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="MessageText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:paddingHorizontal">@dimen/menu_h_padding</item>
        <item name="android:layout_marginVertical">@dimen/main_padding</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="TablayoutText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/dark</item>
        <item name="tabIndicatorColor">@color/dark</item>
    </style>
    <style name="TitleText">
        <item name="android:layout_marginTop">@dimen/media_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="ArtistText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="PlayTimeText" parent="ArtistText">
        <item name="android:layout_marginTop">@dimen/half_main_padding</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="DetailsText">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:textColor">@color/thumb</item>
        <item name="android:lines">1</item>
    </style>
    <style name="DetailsTextData" parent="DetailsText">
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="HistoryTitle">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:paddingHorizontal">@dimen/menu_h_padding</item>
        <item name="android:layout_marginTop">@dimen/history_title_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/menu_v_padding</item>
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="PlaceholderButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="android:layout_marginVertical">@dimen/half_main_padding</item>
        <item name="android:padding">@dimen/zero_size</item>
        <item name="android:insetTop">@dimen/zero_size</item>
        <item name="android:insetBottom">@dimen/zero_size</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="ClearHistoryButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">@dimen/refresh_button_text_size</item>
        <item name="android:layout_marginTop">@dimen/history_button_top_margin</item>
        <item name="android:padding">@dimen/zero_size</item>
        <item name="android:insetTop">@dimen/zero_size</item>
        <item name="android:insetBottom">@dimen/zero_size</item>
        <item name="android:backgroundTint">@color/dark</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="BackButton">
        <item name="android:layout_margin">@dimen/main_padding</item>
        <item name="android:backgroundTint">@color/dark</item>
    </style>
    <style name="SearchItems">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>
    <style name="SearchItemsSmall" parent="SearchItems">
        <item name="android:textSize">@dimen/search_item_small_text_size</item>
        <item name="android:textColor">@color/thumb</item>
    </style>
    <style name="EditTextSearch">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/thumb</item>
        <item name="android:background">@drawable/edittext_rounded_corners</item>
        <item name="android:backgroundTint">@color/track</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="SettingsImageView">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="tint">@color/thumb</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginEnd">11dp</item>
    </style>
</resources>