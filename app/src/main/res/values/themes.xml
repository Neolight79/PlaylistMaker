<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="titleTextColor">@color/dark</item>
    </style>

    <style name="SettingsScreenTheme" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="android:dialogCornerRadius">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontWeight">500</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/dark</item>
    </style>
    <style name="BodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>