<resources>
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/blue_background</item>
        <item name="titleTextColor">@color/dark</item>
    </style>

    <style name="MainScreenTheme" parent="Base.Theme.PlaylistMaker">
        <item name="android:colorBackground">@color/blue_background</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MediaScreenTheme" parent="Base.Theme.PlaylistMaker">
        <item name="android:background">@color/white</item>
    </style>
</resources>